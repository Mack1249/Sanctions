Private Sub Worksheet_Change(ByVal Target As Range)
    If Target.Cells.Count > 1 Then Exit Sub
    If Target.Row < 2 Then Exit Sub
    If Target.Column = 6 Then ' F - Parent
        Call MultiSelectDropdown(Target, 6)
        Call UpdateChildDropdown(Target.Row)
    ElseIf Target.Column = 7 Then ' G - Child
        Call MultiSelectDropdown(Target, 7)
    End If
End Sub
