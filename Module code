Sub SetupParentChildDropdowns()
    Dim ws As Worksheet, dd As Worksheet
    Dim lastRow As Long
    Dim parentRange As Range, childRange As Range

    Set ws = ThisWorkbook.Sheets("Sheet1") ' Change as needed
    Set dd = ThisWorkbook.Sheets("dropdowns")

    ' Define named range for parents
    dd.Names.Add Name:="ParentList", RefersTo:=dd.Range("H2:H125")

    ' Clear previous validations
    ws.Range("F2:F50000").Validation.Delete
    ws.Range("G2:G50000").Validation.Delete

    ' Set parent dropdown validation
    With ws.Range("F2:F50000").Validation
        .Add Type:=xlValidateList, AlertStyle:=xlValidAlertStop, _
             Operator:=xlBetween, Formula1:="=ParentList"
        .IgnoreBlank = True
        .InCellDropdown = True
        .ShowError = True
    End With
End Sub
