Public Sub MultiSelectDropdown(Target As Range, colNum As Long)
    Dim separator As String
    separator = vbLf

    If Target.Column = colNum And Target.Validation.Type = xlValidateList Then
        Application.EnableEvents = False
        Dim valOld As String, valNew As String
        valOld = Target.Value
        valNew = Target.Text

        Dim values() As String
        If valOld <> "" Then
            If InStr(1, valOld, valNew) = 0 Then
                Target.Value = valOld & separator & valNew
            Else
                Target.Value = valOld ' Avoid duplicate
            End If
        Else
            Target.Value = valNew
        End If
        Application.EnableEvents = True
    End If
End Sub
